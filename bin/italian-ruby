#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../lib/italian/ruby/traduttore"
require "rubygems"

if ARGV[0].nil?
  puts <<~EOS
    Esegue un file scritto in Italian Ruby. Sintassi:
    italian-ruby file.ir
  EOS
else
  ARGV.each do |file|
    next unless file

    codice_ruby = Italian::Ruby::Traduttore.traduci file
    eval codice_ruby
  end
end